<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <Button
        android:id="@+id/oddRuleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Odd Numbers" />

    <Button
        android:id="@+id/evenRuleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Even Numbers" />

    <Button
        android:id="@+id/primeRuleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Prime Numbers" />

    <Button
        android:id="@+id/fibonacciRuleBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fibonacci Numbers" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/numberGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"/>
</LinearLayout>
